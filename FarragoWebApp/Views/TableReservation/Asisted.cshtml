@model FarragoWebApp.Models.TableReservation

@{
    ViewBag.Title = "Confirmar Reserva";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Registrar Asistencia a Reservación de Mesa</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 class="text-primary">Registra la astencia de la reserva y escribe un comentario dirigido al cliente</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.AdminObservations, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AdminObservations, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AdminObservations, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Registrar Reservación" class="btn btn-primary" />
                @Html.ActionLink("Cancelar", "Dashboard", "Admin", "", new { @class = "btn btn-danger" })
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Página Administrativa", "Dashboard", "Admin", "", new { @class = "btn btn-default" })
</div>
